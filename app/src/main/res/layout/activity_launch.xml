<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fantasy_cricket_background"
    tools:context="com.indofantasysports.indofantasysports.LaunchActivity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/home_screen_punch_line"
        android:textStyle="italic"
        android:textColor="@color/whiteText"
        android:textSize="35sp"
        android:textAlignment="center"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="141dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="42dp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="158dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="220dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="158dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/registration_btn_text"
        android:textColor="@color/colorPrimary"
        android:background="@color/whiteText"
        android:textSize="20sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="28dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="78dp"
        android:layout_marginRight="28dp"
        android:id="@+id/button" />
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/login_btn_text"
        android:textColor="@color/colorPrimary"
        android:background="@color/whiteText"
        android:textSize="20sp"
        android:id="@+id/loginBtn"
        app:layout_constraintRight_toLeftOf="@+id/button"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="31dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="31dp" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/skipnowtext"
        android:text="@string/skip_now_text"
        android:textColor="@color/whiteText"
        android:textSize="18sp"
        android:gravity="left"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="92dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="29dp"
        android:layout_marginRight="132dp" />



</android.support.constraint.ConstraintLayout>
